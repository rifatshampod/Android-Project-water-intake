<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HealthTipsActivity"
    tools:showIn="@layout/activity_health_tips">

    <Button
        android:id="@+id/bMindfulness"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="23dp"
        android:background="#FF9800"
        android:text="Mindfulness"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bActivity"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="#2196F3"
        android:text="Activity"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bNutrition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMindfulness" />

    <Button
        android:id="@+id/bNutrition"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:background="#9C27B0"
        android:text="Nutrition"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bSleep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bActivity" />

    <Button
        android:id="@+id/bSleep"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginBottom="86dp"
        android:background="#673AB7"
        android:text="Sleep"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bNutrition" />

</androidx.constraintlayout.widget.ConstraintLayout>