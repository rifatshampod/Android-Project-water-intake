<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NutritionActivity"
    tools:showIn="@layout/activity_nutrition">


    <ImageView
        android:id="@+id/bgTips2"
        android:layout_width="323dp"
        android:layout_height="235dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="232dp"
        android:background="#9C27B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bgTips"
        android:layout_width="303dp"
        android:layout_height="226dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="232dp"
        android:background="#F5F4F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFruits"
        android:layout_width="372dp"
        android:layout_height="312dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fruitsimage" />

    <TextView
        android:id="@+id/tvTips1"
        android:layout_width="254dp"
        android:layout_height="156dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="280dp"
        android:text="@string/text_with_bullet"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>